# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@mongodb-host:27017/face_auth?replicaSet=rs0
MONGODB_DATABASE=face_auth

# Storage Configuration (use shared storage for horizontal scaling)
STORAGE_PATH=/shared/storage
VECTOR_DB_PATH=/shared/vector_db

# Security
JWT_SECRET_KEY=<generate-strong-random-key-here>
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Face Recognition Settings
EMBEDDING_DIMENSION=512
MIN_FACE_SIZE=80
BLUR_THRESHOLD=100.0
QUALITY_SCORE_THRESHOLD=0.5
VERIFICATION_THRESHOLD=0.85

# Performance Settings
# MongoDB connection pool (per worker)
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10

# Cache TTL (seconds)
CACHE_DEFAULT_TTL=3600

# FAISS IVF Settings
FAISS_USE_IVF=true
FAISS_NLIST=100
FAISS_NPROBE=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30

# Timeouts
REQUEST_TIMEOUT=120
GRACEFUL_SHUTDOWN_TIMEOUT=30
